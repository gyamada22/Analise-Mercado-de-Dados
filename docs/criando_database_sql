-- 3. Criar o banco novamente
CREATE DATABASE projeto_vagas;
GO

-- 4. Usar o banco
USE projeto_vagas;
GO

-- 5. Criar tabelas
CREATE TABLE dbo.Vagas (
    ID INT PRIMARY KEY,
    Empresa NVARCHAR(255),
    Setor NVARCHAR(255),
    Modalidade NVARCHAR(255),
    Senioridade NVARCHAR(255),
    Cargo NVARCHAR(255),
    Localizacao NVARCHAR(255)
);

CREATE TABLE dbo.Skills (
    Vaga_ID INT,
    Skill NVARCHAR(255),
    Requisito NVARCHAR(50),
    FOREIGN KEY (Vaga_ID) REFERENCES dbo.Vagas(ID)
);
